{
    "name": "required",
    "mobile": "required|numeric|min:1000000000|max:9999999999",
    "email": "email",
    "guardian_prefix": "required|in:S/O,D/O,W/O,C/O",
    "guardian": "required",
    "pincode": "required|numeric|min:170000|max:179999",
    "district_id": "required|numeric|exists:App\\Models\\Region,id",
    "constituency_id": "required|numeric|exists:App\\Models\\Region,id",
    "tehsil_id": "required|numeric|exists:App\\Models\\Region,id",
    "block_id": "required|numeric|exists:App\\Models\\Region,id",
    "panchayat_id": "required|numeric|exists:App\\Models\\Region,id",
    "address": "required",
    "birth_date": "required|date",
    "aadhaar": "required|numeric|regex:/^[2-9]{1}[0-9]{3}[0-9]{4}[0-9]{4}$/",
    "pan": "regex:/^([a-zA-Z]([a-zA-Z]([a-zA-Z]([a-zA-Z]([a-zA-Z]([0-9]([0-9]([0-9]([0-9]([a-zA-Z])?)?)?)?)?)?)?)?)?)?$/",
    "gender": "required|in:Male,Female,Other",
    "marital_status": "required|in:Unmarried,Married,Divorced,Widowed",
    "spouse_aadhaar":"required_if:marital_status,Married",
    "is_specially_abled": "required|in:No,Yes",
    "social_category_id": "required|exists:App\\Models\\Enum,id",
    "belongs_to_minority": "required|in:No,Yes",
    "partner_name.*": "required",
    "partner_gender.*": "required|in:Male,Female,Other",
    "partner_birth_date.*": "required|date",
    "partner_social_category_id.*": "required|exists:App\\Models\\Enum,id",
    "partner_is_specially_abled.*": "required|in:No,Yes",
    "partner_aadhaar.*": "required|numeric|regex:/^[2-9]{1}[0-9]{3}[0-9]{4}[0-9]{4}$/",
    "partner_mobile.*": "required|numeric|min:1000000000|max:9999999999"
}